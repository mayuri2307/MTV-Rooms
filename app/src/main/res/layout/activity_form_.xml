<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl"
    android:background="@drawable/background_color_1"
    tools:context="com.aryan.android.oyo.Form_Activity">



    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_marginTop="32dp"
        android:layout_marginLeft="60dp"
        android:text="Enter Name:"
        android:textAllCaps="true"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"

        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="64dp"
        android:clickable="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/cardview_dark_background"
        android:text="Enter Name" />

    <TextView
        android:id="@+id/text_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="126dp"
        android:text="Enter Location:"
        android:textAllCaps="true"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />


    <EditText
        android:id="@+id/edit_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_end"

        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="160dp"


        android:clickable="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Location"
        android:textColor="@color/cardview_dark_background"
        tools:ignore="RtlCompat" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text2"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="224dp"
        android:text="Cost:"
        android:textAllCaps="true"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="263dp"
        android:ems="10"
        android:inputType="text|number"
        android:text="Enter Cost"
        android:textColor="@color/cardview_dark_background"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="330dp"
        android:text="Enter Description: "
        android:textAllCaps="true"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

    <EditText
        android:id="@+id/edit_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"

        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="380dp"
        android:clickable="true"
        android:ems="10"
        android:inputType="text"
        android:textColor="@color/cardview_dark_background"
        android:text="Description" />

    <Button

        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/letzgo"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="73dp"
        android:background="@drawable/shaape"
        android:orientation="vertical"
        android:text="Add"
        android:textColor="@android:color/white"
        tools:ignore="RtlCompat"/>

    <Button

        android:id="@+id/letzgo2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="9dp"
        android:background="@drawable/shaape"
        android:orientation="vertical"
        android:text="Delete"
        android:textColor="@android:color/white"
        tools:ignore="RtlCompat" />


</RelativeLayout>